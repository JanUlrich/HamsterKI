import java.util.ArrayList;
void main() {
	// Ermittelt zu Beginn des Programms die auf dem Spielfeld liegenden Körner ...
    int gesamtAnzahlKoerner = Territorium.getAnzahlKoerner();



    // Neuen Hamster erstellen


    ArrayList<Wegfindung> algos = new ArrayList<Wegfindung>();
    algos.add(new HamsterWegfindung());
    algos.add(new PfadWegfindung());

    ArrayList<MeinHamster> hamsters = new ArrayList<MeinHamster>();

    for (Wegfindung wf : algos) {
        MeinHamster hamster = new MeinHamster(5, 0, 0, 0, wf);
        hamsters.add(hamster);
    }
    mainLoop(hamsters);


    // Ist die KI fertig (alle Körner wurden eingesammelt | Hamster
    // hat keine Energie mehr), dann werden alle übrig gebliebenen
    // Körnen ermittelt ...
	int uebrigeAnzahlKoerner = Territorium.getAnzahlKoerner();

    // TODO Die Anzahl übrig gebliebener Körnern und andere
    // Informationen kann am Ende als Informationen ausgegeben werden!
    System.out.println("Ende");
}

void mainLoop(ArrayList<MeinHamster> hamsters) {
    while(true) {
    	try {
            for (MeinHamster hamster : hamsters) {
    	    	hamster.kiStep();
    	    	if(Territorium.getAnzahlKoerner()==0){
    	    		hamster.schreib("Alle Körner gefunden\nRestenergie: "+hamster.getEnergie());
                    return; //Ende
    	    	}
            }
    	} catch(HamsterEnergieException e) {
    		return;
    	}
    }
}
